{
	"compilerOptions": {
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"esnext",
			"esnext.asynciterable"
		],
		"declaration": true,
		"sourceMap": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "src",
		"paths": {
			"@Client/*": ["lib/client/*"],
			"@Definition/*": ["lib/definition/*"],
			"@Util/*": ["lib/util/*"]
		}
	},
	"exclude": ["node_modules"]
}